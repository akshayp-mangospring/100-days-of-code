<p style="color: green"><%= notice %></p>
<%= render @post %>
<section>
  <h5>Comments:</h5>
  <% if @comments.present? %>
    <ul>
      <% @comments.each do |c| %>
        <li id='<%= "post-#{c.post_id}-comment-#{c.id}" %>'><%= c.content %></li>
      <% end %>
    </ul>
  <% end %>
</section>
<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete %>
</div>
